<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ostermann.sapinoscope.Message_alerte_activity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="313dp"
        android:layout_height="274dp"
        android:layout_alignBottom="@+id/bt_messageAlerte_ok"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_messageAlerte_infoTxt"
        android:src="@drawable/pic_alerte" />

    <TextView
        android:id="@+id/txt_messageAlerte_parcelleName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/parcelle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_messageAlerte_secteurName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_messageAlerte_parcelleName_txt"
        android:text="@string/secteur"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_messageAlerte_infoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/txt_messageAlerte_secteurName_txt"
        android:layout_margin="10dp"
        android:text="@string/message_alerte_info" />

    <Button
        android:id="@+id/bt_messageAlerte_ok"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView1"
        android:layout_margin="5dp"
        android:paddingLeft="0dp"
        android:text="@string/ok" />

</RelativeLayout>