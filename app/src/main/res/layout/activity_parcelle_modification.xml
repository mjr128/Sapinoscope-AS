<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ostermann.sapinoscope.Parcelle_modification" >

    <TextView
        android:id="@+id/txt_parcelle_modif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_addsap_secteur_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_secteur_modif_title"
        android:layout_marginTop="64dp"
        android:text="Nom" />

    <EditText
        android:id="@+id/editText_parcelle_modif_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_addsap_secteur_titre"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_addsap_secteur_titre"
        android:ems="10"
        android:hint="Nom parcelle" >

    </EditText>

    <EditText
        android:id="@+id/editText_parcelle_modif_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/editText_parcelle_modif_nom"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:hint="Description" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_parcelle_modif_nom"
        android:layout_below="@+id/editText_parcelle_modif_nom"
        android:layout_marginTop="32dp"
        android:text="Parcelle" />

    <TextView
        android:id="@+id/textView_parcelle_coef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_parcelle_modif_desc"
        android:layout_below="@+id/editText_parcelle_modif_desc"
        android:layout_marginTop="40dp"
        android:text="Coefficient de croissance" />

    <Spinner
        android:id="@+id/spin_parcelle_modif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_parcelle_coef" />

    <Button
        android:id="@+id/bt_parcelle_modif_add"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:minHeight="70dip"
        android:text="Valider"
        android:textSize="20sp" />

</RelativeLayout>
